package _02_Estruturas_Condicionais;

import java.util.Scanner;

public class _06_Ternário {

	public static void main(String[] args) {
		
		
		// Expressão condicional TERNÁRIA
		
		// TERNÁRIO é uma estrutura opcional ao if-else de quando se deseja decidir um VALOR com base em uma condição.
		// OU SEJA: 
		
		
		//SINTAXE:
		
		// ( condição ) ? valor_se_verdadeiro : valor_se_falso
		
		// ONDE: inicia pela condição/variável entre parenteses, ? [interrogação] que representa o SE SIM, o valor caso a condição 
		//       seja verdadeira, : [dois pontos] que representa o SE NÃO e o valor caso a condição seja falsa
		
		// Exemplo estrutural
		
		// ( 2 > 4 ) ? 50 : 80   ----------> 80
		// ( 10 != 3 ) ? "Maria" : "Alex"   ----------> "Maria"
		
		
		
